# DHCP Server Configuration - Generated by Ansible
# {{ ansible_managed }}

# Global DHCP settings
default-lease-time {{ dhcp_lease_time }};
max-lease-time {{ dhcp_lease_time * 2 }};
authoritative;

# Logging
log-facility local7;

# Domain name and DNS settings
option domain-name "{{ dhcp_domain_name }}";
option domain-name-servers {% for dns in dhcp_dns_servers %}{{ dns }}{% if not loop.last %}, {% endif %}{% endfor %};

# Subnet declaration
subnet {{ dhcp_subnet }} netmask {{ dhcp_netmask }} {
 # IP address range for dynamic allocation
 range {{ dhcp_range_start }} {{ dhcp_range_end }};

 # Network options
 option routers {{ dhcp_gateway }};
 option subnet-mask {{ dhcp_netmask }};
 option broadcast-address 192.168.1.255;

 # Additional options
 option time-offset -18000; # Eastern Standard Time
 option ntp-servers {{ dhcp_gateway }};

 # PXE boot options (if needed)
 # next-server {{ dhcp_gateway }};
 # filename "pxelinux.0";
}

